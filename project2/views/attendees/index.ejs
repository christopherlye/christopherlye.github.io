<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Index</title>
  </head>
  <body>
    <h1>List of Attendees</h1>
    <form
      style="display: inline-block;"
      action="/sessions?_method=DELETE"
      method="POST"
    >
      <input
        type="submit"
        value="logout | <%=currentUser.username%>"
        class="nav-links"
        id="logout"
      />
    </form>
    <a href="/wedding/attendees/new"><button>Add attendee</button></a>
    <a href="/wedding/attendees/seed"><button>Add seed data</button></a>
    <a href="/wedding/attendees/deleteAll"><button>Delete All</button></a>
    <a href="/wedding/groups/"><button>View Groups</button></a>
    <a href="/wedding/reminders/"><button>View Reminders</button></a>
    <ol>
      <% for (let i = 0; i < attendees.length; i++) { %>
      <li>
        <div>
          <ul>
            <li>
              <a href="/wedding/attendees/<%=attendees[i]._id%>"
                ><%=attendees[i].firstName%> <%=attendees[i].lastName%></a
              >
            </li>
            <li>
              <% if (attendees[i].attendance) { %> Yes <% } else { %> No <% } %>
            </li>

            <% for (let j = 0; j < groups.length; j++) { %> <% if
            (JSON.stringify(attendees[i].group) ===
            JSON.stringify(groups[j]._id)) { %>
            <li>
              <%=groups[j].name%>
            </li>
            <% } else { %><% } %> <% } %>
          </ul>
        </div>
        <br />
      </li>
      <% } %>
    </ol>
  </body>
</html>
