<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../../views/partials/head.ejs %>
    <title>Zane & Sophie | Login</title>
  </head>
  <body>
    <div class="login-page">
      <div class="login-form-container">
        <form class="login-form" action="/sessions" method="POST">
          <div class="divider"></div>
          <div class="login-header">
            <h1>login</h1>
          </div>
          <div>
            <label for="username" class="login-labels">User Name</label>
            <input
              placeholder="username"
              class="username"
              type="text"
              name="username"
              required
            />
          </div>
          <div>
            <label for="password" class="login-labels">Password</label>
            <input
              placeholder="password"
              class="password"
              type="password"
              name="password"
              required
            />
          </div>
          <button type="submit" name="action" class="login-button">
            login
          </button>
        </form>
      </div>
